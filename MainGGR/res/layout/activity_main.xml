<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <RelativeLayout
	        android:layout_width="fill_parent"
    	    android:layout_height="50dp"
        	android:layout_weight="4"
	        android:background="#AABBCC"
    	    android:orientation="horizontal" >

        	<Button
         		android:id="@+id/main_btn_popup_menu"
            	android:layout_width="30dp"
           		android:layout_height="30dp"
            	android:layout_centerVertical="true"
            	android:layout_marginLeft="7dp"
            	android:background="@drawable/popup_menu" />

        	<Button
            	android:id="@+id/main_btn_logo"
            	android:layout_width="150dp"
            	android:layout_height="18dp"
            	android:layout_marginTop="8dp"
            	android:layout_marginBottom="8dp"
            	android:layout_centerHorizontal="true"
            	android:layout_centerVertical="true"
            	android:scaleType="centerCrop" />

        	<Button
            	android:id="@+id/main_btn_mypage"
            	android:layout_width="30dp"
            	android:layout_height="30dp"
            	android:layout_alignParentRight="true"
            	android:layout_centerVertical="true"
            	android:layout_marginRight="8dp"
            	android:background="@drawable/mypage" />

    	</RelativeLayout>
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/bar_bg">
        <EditText
        	android:id="@+id/main_searchText"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:hint="@string/search_hint"
            android:textSize="15sp">
        </EditText>
        <Button
			android:id="@+id/main_btn_search"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/search" />
	</RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp" >
        <Button
            android:id="@+id/main_btn_mapButton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
	        android:background="@drawable/map"></Button>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
	        android:textSize="20dp"
	        android:text="지도로 대학교 찾기!!"
	        android:textColor="#FFFFFF"
	        android:textStyle="bold"
	        android:layout_marginTop="100dp"
	        android:layout_marginLeft="10dp">
        </TextView>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
	        android:textSize="15dp"
	        android:text="자세히 보기..."
	        android:textColor="#FFFFFF"
	        android:textStyle="bold"
	        android:layout_marginTop="125dp"
	        android:layout_marginLeft="10dp">
        </TextView>
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="150dp">
        <Button
            android:id="@+id/main_btn_randomButton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
	        android:background="@drawable/random">
        </Button>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
	        android:textSize="20dp"
	        android:text="랜덤매칭!!"
	        android:textColor="#FFFFFF"
	        android:textStyle="bold"
	        android:layout_marginTop="100dp"
	        android:layout_marginLeft="10dp">
        </TextView>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
	        android:textSize="15dp"
	        android:text="자세히 보기..."
	        android:textColor="#FFFFFF"
	        android:textStyle="bold"
	        android:layout_marginTop="125dp"
	        android:layout_marginLeft="10dp">
        </TextView>
        </RelativeLayout>
        
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:weightSum="1">
        
        <Button
            android:id="@+id/main_btn_requset"
            android:layout_weight="0.25"
            android:layout_height="fill_parent">
        </Button>
        
        <Button
            android:id="@+id/main_btn_take"
            android:layout_weight="0.25"
            android:layout_height="fill_parent">
        </Button>
        
        <Button
            android:id="@+id/main_btn_talk"
            android:layout_weight="0.25"
            android:layout_height="fill_parent">
        </Button>
        
        <Button
            android:id="@+id/main_btn_store"
            android:layout_weight="0.25"
            android:layout_height="fill_parent">
        </Button>
    </LinearLayout>
</LinearLayout>
